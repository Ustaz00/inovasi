        ];

        // Profile pictures categories
        const profilePictures = {
            cars: ['ğŸï¸', 'ğŸš—', 'ğŸš™', 'ğŸš•', 'ğŸš', 'ğŸ›»', 'ğŸ', 'ğŸš“', 'ğŸš‘', 'ğŸš’'],
            animals: ['ğŸ±', 'ğŸ¶', 'ğŸ¦', 'ğŸ¯', 'ğŸ»', 'ğŸ¼', 'ğŸ¨', 'ğŸ¸', 'ğŸµ', 'ğŸ¦Š'],
            characters: ['ğŸ‘‘', 'ğŸ¤´', 'ğŸ‘¸', 'ğŸ§™â€â™‚ï¸', 'ğŸ§™â€â™€ï¸', 'ğŸ¦¸â€â™‚ï¸', 'ğŸ¦¸â€â™€ï¸', 'ğŸ§šâ€â™‚ï¸', 'ğŸ§šâ€â™€ï¸', 'ğŸ­']
